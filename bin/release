#!/usr/bin/env bash
# bin/release <build-dir>

cat <<EOF
/app/vendor/R/bin/R -s <<RPROG > indent
  Sys.setenv(BUILD_DIR="$BUILD_DIR")
  Sys.setenv(JAVA_HOME="$JAVA_HOME")
  Sys.setenv(JAVA_CPPFLAGS="$JAVA_CPPFLAGS")
  setwd("$BUILD_DIR")
  r <- getOption("repos");
  r["CRAN"] <- "$CRAN_MIRROR";
  options(repos=r);
  `cat /app/R/TestAchillesCode.R'
EOF
